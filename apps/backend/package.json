{
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"main": "server.js",
	"scripts": {
		"start:render": "node dist/apps/backend/src/server.js",
		"start": "dotenv -e .env -- node dist/apps/backend/src/server.js",
		"dev": "dotenv -e .env.test -- node dist/apps/backend/src/server.js",
		"build": "npm run generate && tsc",
		"test:unit": "dotenv -e .env.test -- jest --testPathPattern=features --coverage --collectCoverageFrom='src/features/**/*.ts'",
		"test:integration": "dotenv -e .env.test -- jest --testPathPattern=tests/integration",
		"biome": "npx @biomejs/biome check --write ./src",
		"biome:fix": "npx @biomejs/biome check  --fix --unsafe ./src",
		"type-check": "npx tsc --noEmit",
		"generate": "npx prisma generate --schema=../../packages/shared/prisma/schema.prisma",
		"generate:prod": "dotenv -e .env -- npx prisma generate --schema=../../packages/shared/prisma/schema.prisma",
		"generate:test": "dotenv -e .env.test -- npx prisma generate --schema=../../packages/shared/prisma/schema.prisma",
		"migrate:prod": "dotenv -e .env -- npx prisma migrate deploy --schema=../../packages/shared/prisma/schema.prisma",
		"migrate:test": "dotenv -e .env.test -- npx prisma migrate dev --schema=../../packages/shared/prisma/schema.prisma",
		"db:push:test": "dotenv -e .env.test  npx prisma db push --schema=../../packages/shared/prisma/schema.prisma",
		"studio:prod": "dotenv -e .env -- npx prisma studio --schema=../../packages/shared/prisma/schema.prisma",
		"studio:test": "dotenv -e .env.test -- npx prisma studio --schema=../../packages/shared/prisma/schema.prisma"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@faker-js/faker": "^9.6.0",
		"@prisma/client": "^6.7.0",
		"axios": "^1.8.1",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"express": "^4.21.2",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
		"module-alias": "^2.2.3",
		"openai": "^5.3.0",
		"stripe": "^17.7.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@babel/code-frame": "^7.26.2",
		"@biomejs/biome": "1.9.4",
		"@types/cookie": "^0.6.0",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/faker": "^6.6.8",
		"@types/helmet": "^0.0.48",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/module-alias": "^2.0.4",
		"@types/node": "^22.15.3",
		"@types/supertest": "^6.0.2",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.7",
		"jest": "^29.7.0",
		"jest-mock-extended": "^4.0.0-beta1",
		"nodemon": "^3.1.9",
		"prisma": "^6.7.0",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"turbo": "^2.5.2",
		"typescript": "^5.7.3"
	}
}
